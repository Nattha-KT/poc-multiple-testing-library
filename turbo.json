{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**", ".next/**", "build/**"],
      "dependsOn": ["^build"],
      "env": [".env.*local"]
    },
    "test": {
      "outputs": [],
      "dependsOn": ["^build", "^test"],
      "env": [".env.*local"]
    },
    "lint": {
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
